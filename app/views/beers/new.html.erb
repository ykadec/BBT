<!-- Validation failure messages -->

<% if @beer.errors.any? %>
  <% @beer.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<!-- Responsive panel example -->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Add Beer</h3>
      </div>
      <div class="panel-body">
        <form action="/create_beer" method="post" class="form-horizontal">
          <!-- Hidden input for authenticity token to protect from forgery -->
          <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

          <!-- Label and input for production_location -->
          <div class="form-group">
            <label for="production_location" class="col-sm-2 control-label">
              Production location
            </label>
            <div class="col-sm-10">
              <textarea id="production_location" name="production_location" placeholder="Production location" class="form-control" rows="3"><%= @beer.production_location %></textarea>
            </div>
          </div>

          <!-- Label and input for photo -->
          <div class="form-group">
            <label for="photo" class="col-sm-2 control-label">
              Photo
            </label>
            <div class="col-sm-10">
              <input type="text" id="photo" name="photo" placeholder="Photo" class="form-control" value="<%= @beer.photo %>">
            </div>
          </div>

          <!-- Label and input for name -->
          <div class="form-group">
            <label for="name" class="col-sm-2 control-label">
              Name
            </label>
            <div class="col-sm-10">
              <input type="text" id="name" name="name" placeholder="Name" class="form-control" value="<%= @beer.name %>">
            </div>
          </div>

          <!-- Label and input for catagory -->
          <div class="form-group">
            <label for="catagory" class="col-sm-2 control-label">
              Catagory
            </label>
            <div class="col-sm-10">
              <input type="text" id="catagory" name="catagory" placeholder="Catagory" class="form-control" value="<%= @beer.catagory %>">
            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <button class="btn btn-success">
                Create Beer
              </button>
              or
              <a href="/beers">Cancel</a>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<!-- End responsive panel example -->
